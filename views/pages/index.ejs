        "@context": "https://schema.org",
        "@type": "LodgingBusiness",
        "name": "Neatbat Guest House",
        "image": "https://example.com/assets/images/hero-lg-screen.webp",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "21 Witkruis Arend St, Kungwini Country Estate",
          "addressLocality": "Bronkhorstspruit",
          "addressRegion": "Gauteng",
          "postalCode": "1020",
          "addressCountry": "ZA"
        },
        "priceRange": "R1200",
        "telephone": "+27 834113931",
        "email": "info@neatbat.co.za",
        "url": "https://example.com",
        "amenities": [
          "Free Wifi",
          "Free Parking",
          "Outdoor Pool",
          "Child-Friendly",
          "Bar",
          "Restaurant"
        ],
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": -25.8890895,
          "longitude": 28.7017946
        },
        "review": [
          {
            "@type": "Review",
            "author": "Gerrit Malan",
            "datePublished": "2024-12-01",
            "description": "Since our arrival late Friday afternoon until our departure on Sunday morning, we were met with utmost sincerity.",
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "5",
              "bestRating": "5"
            }
          },
          {
            "@type": "Review",
            "author": "Willie Scholtz",
            "datePublished": "2024-12-01",
            "description": "It was a 40th birthday celebration, and the venue was perfect for the occasion.",
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "5",
              "bestRating": "5"
            }
